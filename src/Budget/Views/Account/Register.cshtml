<div class="container">
    <h3>Регистрация</h3>


    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <div class="form-group">
            <label class="sr-only" for="name">Name:</label>
            <input type="text" name="Login" class="form-control" id="name" placeholder="Логин">
        </div>
        <div class="form-group">
            <label class="sr-only" for="name">Name:</label>
            <input type="password" name="Password" class="form-control" id="name" placeholder="Пароль">
        </div>
        <div class="form-group">
            <label class="sr-only" for="name">Name:</label>
            <input type="password" name="ConfirmPassword" class="form-control" id="name" placeholder="Повторите пароль">
        </div>
        <button type="submit" class="btn btn-default">Регистрация</button>
    </form>
</div>