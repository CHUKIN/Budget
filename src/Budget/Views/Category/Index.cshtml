@using Budget.Models
@model IEnumerable<Category>
<div>
    <h1>Категории:</h1><table class="table">
        @foreach (Category p in Model)
        {
            <tr><td>@p.Name</td></tr>
        }
    </table>
</div><hr />

<div>
    <h1>Добавление категории:</h1>
    <form asp-action="Add" asp-controller="Category" asp-anti-forgery="true">

        <p>
            <label>Название:</label><br />
            <input type="text" name="name" /><br /><br />
            
            <input type="submit" value="Создать" />
        </p>
    </form>
</div><hr />
<div>
    <h1>Удаление категории:</h1>
    <form asp-action="Delete" asp-controller="Category" asp-anti-forgery="true">

        <p>
            <label for="NameDel">Выберите категорию:</label>
            <select name="NameDel">
                @foreach (Category i in Model)
                {
                    <option value="@i.Name">@i.Name</option>
                }

            </select>
        </p>
        <p>
            <input type="submit" value="Удалить" />
        </p>
    </form>
</div><hr />
