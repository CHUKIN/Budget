@using Budget.Models
@using Budget.ViewModels
@model UserContext

<div class="container">
    <h3>Сортировка</h3>
    <form class="form-inline" form action="~/Cost/Sort" method=POST>
            <div class="form-group ">
                <div class="form-group">
                    <select class="form-control" id="sel1" name="category">
                        <option value="Все">Все</option>
                        @foreach (Category i in Model.Categorys)
                        {
                            <option value="@i.Name">@i.Name</option>
                        }
                    </select>
                    <br>
                </div>
            </div>
            <div class="form-group">
                <label class="sr-only" for="name">Name:</label>
                <input type="date" name="datestart" class="form-control" id="name" placeholder="Дата начала">
            </div>
            <div class="form-group">
                <label class="sr-only" for="money">Money:</label>
                <input type="date" name="dateend" class="form-control" id="name" placeholder="Дата конца">
      </div>
        <button type="submit" class="btn btn-default">Добавить</button>
    </form>
    </div>





    <div class="container">
        <h3>Расходы:</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Описание</th>
                    <th>Стоимость</th>
                    <th>Категория</th>
                    <th>Дата</th>
                    <th>Количество</th>
                    <th>Единица измерения</th>
                    <th>Пользователь</th>
                    <th>Кошелёк</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CostModel p in Model.CostModels.OrderByDescending(i => i.Id))
                {
                   
                    <tr><td>@p.Name</td><td>@p.Money</td><td>@p.Category</td><td>@p.Date.ToString("D")</td><td>@p.Count</td><td>@p.Unit</td><td>@p.User</td><td>@p.Cash</td></tr>
                }

            </tbody>
        </table>
    </div>
