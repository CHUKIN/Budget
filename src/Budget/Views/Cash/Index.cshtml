@using Budget.Models
@model IEnumerable<Cash>
<div class="container">
    <h3>Кошельки:</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>


                <th>Деньги</th>


            </tr>
        </thead>
        <tbody>
            @foreach (Cash p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Money</td>
                    <td>
                        <form asp-action="Delete" asp-controller="Cash" asp-anti-forgery="true">

                            <p>
                                <button value="@p.Name" name='NameDel' type="submit">Удалить</button>
                            </p>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div><hr />

