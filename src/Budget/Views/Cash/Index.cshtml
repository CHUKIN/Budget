    <form class="form-inline" form action="~/Cash/Add" method=POST>
        <div class="form-group">
            <label class="sr-only" for="name">Name:</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Название">
        </div>
        <div class="form-group">
            <label class="sr-only" for="money">Money:</label>
            <input type="number" name="money" class="form-control" id="name" placeholder="Деньги">
        </div>
        <button type="submit" class="btn btn-default">Добавить</button>
    </form>
</div>
