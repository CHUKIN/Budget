@using Budget.Models
@model UserContext

    <div class="container">
        <h3>Кошельки:</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>


                    <th>Деньги</th>


                </tr>
            </thead>
            <tbody>
                @{
                    double nowsaving = 0;
                    double allsaving = 0;
                    double allcash = 0;
                    double cash = 0;
                    double nowcash = 0;
                    double nowallcash = 0;
                    double totalcash = 1850;
                    DateTime datecreate = new DateTime(2016, 08, 28);
                    totalcash += (DateTime.Now.Subtract(datecreate).TotalDays*1850*12/365);
                    double newtotalcash = 0;
                    double nowtotalcash = 0;
                    Cash tmp = Model.Cashs.Where(i => i.Name == "Наличные").FirstOrDefault();
                    if (tmp != null)
                    {
                        cash = tmp.Money;

                    }
                }
                @foreach (Cash p in Model.Cashs)
                {
                    allcash += p.Money;
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Money</td>
                        <td>
                            <form asp-action="Many" asp-controller="Cash" asp-anti-forgery="true">
